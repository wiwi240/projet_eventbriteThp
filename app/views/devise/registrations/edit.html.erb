<div class="container mt-5 mb-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card shadow-sm border-0 rounded-4">
        <div class="card-header bg-white py-4 border-bottom text-center">
          <h2 class="fw-bold text-dark">Paramètres du profil</h2>
          <p class="text-muted mb-0">Gérez vos informations personnelles et vos identifiants</p>
        </div>

        <div class="card-body p-4 p-lg-5">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, multipart: true }) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>

            <div class="row mb-4 align-items-center">
              <div class="col-md-4 text-center">
                <%# --- ZONE AVATAR FIXE --- %>
                <div class="profile-avatar-container shadow-sm mx-auto mb-2">
                  <%= user_avatar(resource, size: 80) %>
                </div>
              </div>
              <div class="col-md-8">
                <label class="form-label fw-bold text-muted small text-uppercase">Changer la photo de profil</label>
                <%= f.file_field :avatar, class: "form-control shadow-none" %>
                <div class="form-text">Format JPG, PNG ou GIF. Max 2 Mo.</div>
              </div>
            </div>

            <hr class="my-4 opacity-25">

            <div class="row mb-3">
              <div class="col-md-6">
                <%= f.label :first_name, "Prénom", class: "form-label fw-semibold" %>
                <%= f.text_field :first_name, class: "form-control rounded-pill px-3 shadow-none", placeholder: "Prénom" %>
              </div>
              <div class="col-md-6">
                <%= f.label :last_name, "Nom", class: "form-label fw-semibold" %>
                <%= f.text_field :last_name, class: "form-control rounded-pill px-3 shadow-none", placeholder: "Nom" %>
              </div>
            </div>

            <div class="mb-3">
              <%= f.label :email, "Adresse email", class: "form-label fw-semibold" %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control rounded-pill px-3 shadow-none" %>
            </div>

            <div class="mb-4">
              <%= f.label :description, "Description / Bio", class: "form-label fw-semibold" %>
              <%= f.text_area :description, rows: 4, class: "form-control rounded-4 px-3 shadow-none", placeholder: "Parlez-nous de vous..." %>
            </div>

            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <div class="alert alert-info py-2 small">En attente de confirmation pour : <%= resource.unconfirmed_email %></div>
            <% end %>

            <div class="bg-light p-4 rounded-4 mb-4">
              <h6 class="fw-bold mb-3"><i class="bi bi-shield-lock me-2"></i>Sécurité</h6>
              
              <div class="mb-3">
                <%= f.label :password, "Nouveau mot de passe", class: "form-label fw-semibold mb-0" %>
                <span class="text-muted d-block small mb-2">(Laissez vide si vous ne voulez pas le changer)</span>
                <%= f.password_field :password, autocomplete: "new-password", class: "form-control rounded-pill px-3 shadow-none" %>
              </div>

              <div class="mb-3">
                <%= f.label :password_confirmation, "Confirmer le nouveau mot de passe", class: "form-label fw-semibold" %>
                <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control rounded-pill px-3 shadow-none" %>
              </div>

              <div class="mb-0 pt-2 border-top">
                <%= f.label :current_password, "Mot de passe actuel", class: "form-label fw-bold text-primary" %>
                <span class="text-muted d-block small mb-2">(Requis pour valider les modifications)</span>
                <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control border-primary rounded-pill px-3 shadow-none" %>
              </div>
            </div>

            <div class="d-grid">
              <%= f.submit "Enregistrer les modifications", class: "btn btn-primary btn-lg rounded-pill fw-bold shadow-sm py-3" %>
            </div>
          <% end %>
        </div>

        <div class="card-footer bg-light border-0 p-4 text-center rounded-bottom-4">
          <p class="text-muted small mb-3">Zone de danger</p>
          <%= button_to "Supprimer mon compte", registration_path(resource_name), data: { confirm: "Êtes-vous sûr ?", turbo_confirm: "Êtes-vous sûr ?" }, method: :delete, class: "btn btn-outline-danger btn-sm rounded-pill px-4" %>
          <div class="mt-3">
            <%= link_to "Retour au profil", :back, class: "text-decoration-none text-secondary small" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>