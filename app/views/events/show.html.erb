<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-lg-8">
      
      <%# --- CARTE PRINCIPALE --- %>
      <div class="card shadow-lg border-0 rounded-4 overflow-hidden mb-4">
        
        <%# --- AJOUT : BANNIÈRE DE L'ÉVÉNEMENT (Active Storage) --- %>
        <% if @event.event_picture.attached? %>
          <div class="event-banner shadow-sm" style="max-height: 400px; overflow: hidden;">
            <%= image_tag @event.event_picture, alt: 'banner', class: "w-100 h-100", style: "object-fit: cover; min-height: 300px;" %>
          </div>
        <% end %>

        <%# Header avec dégradé (Contient Titre et Prix) %>
        <div class="bg-hero-gradient p-4 text-white">
          <div class="d-flex justify-content-between align-items-start">
             <span class="badge bg-white text-primary px-3 py-2 rounded-pill fw-bold shadow-sm">
              <%= @event.price > 0 ? "#{@event.price} €" : "Gratuit" %>
            </span>
            <div class="small opacity-75">
              <i class="bi bi-calendar3 me-1"></i> Ajouté le <%= @event.created_at.strftime("%d/%m/%Y") %>
            </div>
          </div>
          <h1 class="display-5 fw-bold mt-3 mb-0"><%= @event.title %></h1>
          <% if @event.category.present? %>
            <span class="badge bg-white bg-opacity-25 mt-2 rounded-pill small"><%= @event.category %></span>
          <% end %>
        </div>

        <div class="card-body p-4 p-md-5">
          
          <%# --- INFO GRID (Horaires et Lieu) --- %>
          <div class="row g-4 mb-5">
            <div class="col-md-6">
              <div class="d-flex align-items-center p-3 bg-light rounded-4 h-100">
                <div class="text-primary me-3">
                  <i class="bi bi-clock-fill fs-3"></i>
                </div>
                <div>
                  <div class="small text-muted text-uppercase fw-bold">Horaire</div>
                  <div class="fw-medium">
                    <%= @event.start_date.strftime("%H:%M") %>
                    <% if @event.duration %>
                      - <%= (@event.start_date + @event.duration * 60).strftime("%H:%M") %>
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
            <div class="col-md-6">
              <div class="d-flex align-items-center p-3 bg-light rounded-4 h-100">
                <div class="text-primary me-3">
                  <i class="bi bi-geo-alt-fill fs-3"></i>
                </div>
                <div>
                  <div class="small text-muted text-uppercase fw-bold">Lieu</div>
                  <div class="fw-medium text-break"><%= @event.location %></div>
                </div>
              </div>
            </div>
          </div>

          <%# --- DESCRIPTION --- %>
          <h4 class="fw-bold mb-3">À propos de l'événement</h4>
          <p class="text-secondary lh-lg mb-5"><%= simple_format(@event.description) %></p>

          <%# --- ACTION BAR (Organisateur et Bouton Participation) --- %>
          <div class="d-flex flex-column flex-md-row align-items-center justify-content-between p-4 bg-light rounded-4 border">
            
            <%# Infos Organisateur %>
            <div class="d-flex align-items-center mb-3 mb-md-0 w-100">
              <div class="avatar-container me-3 shadow-sm" style="width: 48px; height: 48px; min-width: 48px;">
                 <div class="bg-white text-primary w-100 h-100 d-flex align-items-center justify-content-center fw-bold fs-5 rounded-circle border">
                    <%= @event.admin.email[0].upcase %>
                 </div>
              </div>
              <div class="flex-grow-1">
                <div class="small text-muted">Organisé par</div>
                <div class="fw-bold text-dark"><%= @event.admin.email.split('@')[0].capitalize %></div>
              </div>
            </div>

            <%# Boutons contextuels %>
            <div class="ms-md-4 w-100 w-md-auto text-end">
              <% if user_signed_in? %>
                
                <%# Cas 1 : Admin -> Gérer %>
                <% if current_user == @event.admin %>
                  <%= link_to edit_event_path(@event), class: "btn btn-outline-primary fw-bold rounded-pill px-4 shadow-sm w-100" do %>
                    <i class="bi bi-gear-fill me-1"></i> Gérer
                  <% end %>

                <%# Cas 2 : Déjà inscrit %>
                <% elsif @event.users.include?(current_user) %>
                  <button class="btn btn-success fw-bold rounded-pill px-4 shadow-sm w-100" disabled>
                    <i class="bi bi-check-circle-fill me-1"></i> Inscrit
                  </button>

                <%# Cas 3 : Participer via Stripe %>
                <% else %>
                  <%= button_to checkout_index_path(event_id: @event.id), method: :post, data: { turbo: false }, class: "btn btn-primary fw-bold rounded-pill px-4 shadow-custom transition-up w-100 text-white" do %>
                    Rejoindre (<%= @event.price %>€)
                  <% end %>
                <% end %>

              <%# Cas 4 : Non connecté %>
              <% else %>
                <%= link_to "Se connecter", new_user_session_path, class: "btn btn-dark fw-bold rounded-pill px-4 shadow-sm w-100" %>
              <% end %>
            </div>

          </div>
        </div>
      </div>
      
      <%# --- LISTE DES PARTICIPANTS (Visible uniquement par l'admin) --- %>
      <% if user_signed_in? && current_user == @event.admin && @attendances.present? %>
        <div class="card shadow-sm border-0 rounded-4 mb-4">
          <div class="card-body p-4">
            <h5 class="fw-bold mb-3">Participants inscrits (<%= @attendances.count %>)</h5>
            <ul class="list-group list-group-flush">
              <% @attendances.each do |attendance| %>
                <li class="list-group-item px-0 d-flex align-items-center justify-content-between bg-transparent">
                  <div class="d-flex align-items-center">
                    <div class="bg-light rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 32px; height: 32px;">
                      <i class="bi bi-person-fill text-secondary"></i>
                    </div>
                    <span><%= attendance.user.email %></span>
                  </div>
                  <span class="badge bg-success bg-opacity-10 text-success rounded-pill px-3 py-2">Payé</span>
                </li>
              <% end %>
            </ul>
          </div>
        </div>
      <% end %>

      <%# --- LIEN DE RETOUR --- %>
      <div class="text-center">
        <%= link_to root_path, class: "text-muted text-decoration-none small fw-medium hover-link" do %>
          <i class="bi bi-arrow-left me-1"></i> Retour aux événements
        <% end %>
      </div>

    </div>
  </div>
</div>