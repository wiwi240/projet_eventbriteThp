<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-10">
      <div class="card shadow-sm border-0">
        <div class="card-header bg-white py-3 border-bottom">
          <div class="d-flex justify-content-between align-items-center">
            <h1 class="h3 mb-0 text-dark">Profil de <%= @user.first_name %> <%= @user.last_name %></h1>
            <%= link_to "Modifier mes identifiants", edit_user_registration_path, class: "btn btn-outline-secondary btn-sm" %>
          </div>
        </div>
        
        <div class="card-body p-4">
          <div class="row mb-5">
            <div class="col-md-4 text-center border-end">
              
              <%# --- SECTION AVATAR DIMENSIONNÉE (Ratio 1:1) --- %>
              <%# On utilise un conteneur à taille fixe avec overflow: hidden pour garantir un cercle parfait %>
              <div class="avatar-container mb-3 d-inline-block shadow-sm rounded-circle border bg-light" style="width: 150px; height: 150px; overflow: hidden;">
                <% if @user.avatar.attached? %>
                  <%# L'attribut object-fit: cover empêche la déformation de l'image quel que soit son ratio d'origine %>
                  <%= image_tag @user.avatar, alt: 'avatar', class: "w-100 h-100", style: "object-fit: cover;" %>
                <% else %>
                  <%# Image aléatoire par défaut si aucun avatar n'est présent %>
                  <%= image_tag "https://loremflickr.com/300/300/portrait", alt: 'avatar random', class: "w-100 h-100", style: "object-fit: cover;" %>
                <% end %>
              </div>

              <h4 class="mb-1"><%= @user.first_name %> <%= @user.last_name %></h4>
              <p class="text-muted small"><%= @user.email %></p>

              <%# --- FORMULAIRE D'UPLOAD DE L'AVATAR --- %>
              <% if current_user == @user %>
                <div class="mt-4 px-3">
                  <h6 class="small fw-bold text-muted text-uppercase mb-3">Changer ma photo</h6>
                  <%= form_tag user_avatars_path(@user), multipart: true do %>
                    <div class="mb-3 text-start">
                      <%= file_field_tag :avatar, class: "form-control form-control-sm" %>
                      <div class="form-text small">Privilégiez un format carré.</div>
                    </div>
                    <%= submit_tag "Mettre à jour la photo", class: "btn btn-primary btn-sm w-100 rounded-pill fw-bold" %>
                  <% end %>
                </div>
              <% end %>
            </div>
            
            <div class="col-md-8 px-4">
              <h5 class="text-uppercase text-muted small fw-bold mb-3">Ma Description</h5>
              <div class="p-3 bg-light rounded-3">
                <p class="mb-0 text-secondary lh-base">
                  <%= @user.description.presence || "Aucune description renseignée." %>
                </p>
              </div>
            </div>
          </div>

          <hr class="my-4">

          <%# --- SECTION ÉVÉNEMENTS --- %>
          <div class="events-section">
            <h3 class="h4 mb-4">Événements organisés :</h3>
            
            <% if @user.administered_events.any? %>
              <div class="list-group list-group-flush border rounded-3 overflow-hidden">
                <% @user.administered_events.each do |event| %>
                  <%= link_to event_path(event.id), class: "list-group-item list-group-item-action d-flex justify-content-between align-items-center py-3" do %>
                    <span class="fw-medium"><%= event.title %></span>
                    <span class="badge bg-primary rounded-pill small"><%= event.price %> €</span>
                  <% end %>
                <% end %>
              </div>
            <% else %>
              <div class="alert alert-light text-center border py-4">
                <p class="text-muted mb-3">Vous n'avez pas encore créé d'événement.</p>
                <%= link_to "Créer mon premier événement", new_event_path, class: "btn btn-primary btn-sm rounded-pill px-4" %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>