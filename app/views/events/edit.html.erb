<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
      <div class="card shadow-lg border-0 rounded-4">
        <div class="card-body p-5">
          
          <div class="text-center mb-4">
            <h2 class="fw-bold text-primary">Modifier l'événement</h2>
            <p class="text-muted">Mettez à jour les informations</p>
          </div>

          <%= form_with model: @event, local: true, class: "d-grid gap-3" do |f| %>

            <% if @event.errors.any? %>
              <div class="alert alert-danger rounded-3">
                <ul class="mb-0 small">
                  <% @event.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>

            <div class="form-floating">
              <%= f.text_field :title, class: "form-control", placeholder: "Titre" %>
              <%= f.label :title, "Titre" %>
            </div>

            <%# --- AJOUT CATÉGORIE --- %>
            <div class="form-floating">
               <%= f.select :category, ["Concert", "Sport", "Théâtre", "Conférence", "Autre"], { prompt: "Choisir une catégorie..." }, { class: "form-select" } %>
              <%= f.label :category, "Catégorie" %>
            </div>

            <div class="form-floating">
              <%= f.text_area :description, style: "height: 150px", class: "form-control", placeholder: "Description" %>
              <%= f.label :description, "Description" %>
            </div>

            <div class="row g-2">
              <div class="col-md-6">
                <div class="form-floating">
                  <%= f.date_field :start_date, class: "form-control", placeholder: "Date" %>
                  <%= f.label :start_date, "Date de début" %>
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-floating">
                  <%= f.number_field :duration, step: 5, min: 5, class: "form-control", placeholder: "Durée" %>
                  <%= f.label :duration, "Durée (min)" %>
                </div>
              </div>
            </div>

            <div class="form-floating">
              <%= f.number_field :price, min: 1, max: 1000, class: "form-control", placeholder: "Prix" %>
              <%= f.label :price, "Prix (€)" %>
            </div>

            <div class="form-floating">
              <%= f.text_field :location, class: "form-control", placeholder: "Lieu" %>
              <%= f.label :location, "Lieu" %>
            </div>
            
            <div class="d-grid gap-2 mt-4">
              <%= f.submit "Enregistrer", class: "btn btn-primary btn-lg rounded-pill fw-bold shadow-sm" %>
              <%= link_to "Annuler", event_path(@event), class: "btn btn-light rounded-pill text-muted" %>
            </div>

          <% end %>

          <hr class="my-4">

          <div class="text-center">
            <p class="text-danger small fw-bold mb-2">Zone de danger</p>
            <%= button_to "Supprimer cet événement", event_path(@event), method: :delete, data: { turbo_confirm: "Êtes-vous sûr ?" }, class: "btn btn-outline-danger btn-sm rounded-pill px-4" %>
          </div>

        </div>
      </div>
    </div>
  </div>
</div>
