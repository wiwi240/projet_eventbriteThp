<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-10">
      <div class="card shadow-sm border-0">
        <div class="card-header bg-white py-3 border-bottom">
          <div class="d-flex justify-content-between align-items-center">
            <h1 class="h3 mb-0 text-dark">Profil de <%= @user.first_name %> <%= @user.last_name %></h1>
            <%= link_to "Modifier mes identifiants", edit_user_registration_path, class: "btn btn-outline-secondary btn-sm" %>
          </div>
        </div>
        
        <div class="card-body p-4">
          <div class="row mb-5">
            <div class="col-md-4 text-center border-end">
              
              <%# --- ZONE AVATAR FIXE --- %>
              <div class="profile-avatar-container shadow-sm mb-3 mx-auto">
                <%= user_avatar(@user, size: 150) %>
              </div>

              <h4 class="mb-1 fw-bold"><%= @user.first_name %> <%= @user.last_name %></h4>
              <p class="text-muted small mb-4"><%= @user.email %></p>

              <% if current_user == @user %>
                <div class="px-3">
                  <div class="p-3 border rounded-3 bg-light bg-opacity-50">
                    <h6 class="small fw-bold text-muted text-uppercase mb-3" style="font-size: 0.7rem;">Changer ma photo</h6>
                    <%= form_tag user_avatars_path(@user), multipart: true do %>
                      <div class="mb-3">
                        <%= file_field_tag :avatar, class: "form-control form-control-sm" %>
                      </div>
                      <%= submit_tag "Mettre à jour", class: "btn btn-primary btn-sm w-100 rounded-pill fw-bold" %>
                    <% end %>
                  </div>
                </div>
              <% end %>
            </div>
            
            <div class="col-md-8 px-4">
              <h5 class="text-uppercase text-muted small fw-bold mb-3">Ma Description</h5>
              <div class="p-4 bg-light rounded-4">
                <p class="mb-0 text-secondary lh-base fs-6">
                  <%= @user.description.presence || "Aucune description renseignée." %>
                </p>
              </div>
            </div>
          </div>

          <hr class="my-5 opacity-25">

          <div class="events-section">
            <h3 class="h4 fw-bold mb-4 text-dark">Événements organisés</h3>
            
            <% if @user.administered_events.any? %>
              <div class="list-group list-group-flush border rounded-4 overflow-hidden">
                <% @user.administered_events.each do |event| %>
                  <%= link_to event_path(event.id), class: "list-group-item list-group-item-action d-flex justify-content-between align-items-center py-3 px-4" do %>
                    <span class="fw-medium text-dark"><%= event.title %></span>
                    <span class="badge bg-primary bg-opacity-10 text-primary rounded-pill px-3 py-2"><%= event.price %> €</span>
                  <% end %>
                <% end %>
              </div>
            <% else %>
              <div class="alert alert-light text-center border py-5 rounded-4">
                <i class="bi bi-calendar-x text-muted mb-3 d-block fs-1"></i>
                <p class="text-muted mb-3">Vous n'avez pas encore créé d'événement.</p>
                <%= link_to "Créer mon premier événement", new_event_path, class: "btn btn-primary btn-sm rounded-pill px-4 fw-bold" %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>