<div class="container py-5">
  <div class="row justify-content-center align-items-center" style="min-height: 80vh;">
    <div class="col-12 col-md-8 col-lg-6">
      
      <div class="card shadow-sm p-4 p-md-5 bg-white">
        
        <div class="text-center mb-5">
          <div class="bg-dark bg-opacity-10 rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 64px; height: 64px;">
            <i class="bi bi-rocket-takeoff text-dark fs-3"></i>
          </div>
          <h2 class="fw-bolder h3 text-dark mb-1">Créer un compte</h2>
          <p class="text-muted small">Rejoignez la communauté des organisateurs THP</p>
        </div>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), data: { turbo: false }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="row g-3 mb-3">
            <div class="col-md-6">
              <%= f.label :first_name, "Prénom", class: "form-label small fw-bold text-uppercase text-muted" %>
              <%= f.text_field :first_name, autofocus: true, class: "form-control form-control-lg bg-light border-0 fs-6", placeholder: "Jean" %>
            </div>
            <div class="col-md-6">
              <%= f.label :last_name, "Nom", class: "form-label small fw-bold text-uppercase text-muted" %>
              <%= f.text_field :last_name, class: "form-control form-control-lg bg-light border-0 fs-6", placeholder: "Dupont" %>
            </div>
          </div>

          <div class="mb-3">
            <%= f.label :email, "Adresse email", class: "form-label small fw-bold text-uppercase text-muted" %>
            <%= f.email_field :email, autocomplete: "email", class: "form-control form-control-lg bg-light border-0 fs-6", placeholder: "jean.dupont@exemple.com" %>
          </div>

          <div class="mb-3">
            <%= f.label :description, "Description", class: "form-label small fw-bold text-uppercase text-muted" %>
            <%= f.text_area :description, class: "form-control form-control-lg bg-light border-0 fs-6", rows: 3, placeholder: "Parlez-nous un peu de vous..." %>
          </div>

          <div class="row g-3 mb-4">
            <div class="col-md-6">
              <%= f.label :password, "Mot de passe", class: "form-label small fw-bold text-uppercase text-muted" %>
              <%= f.password_field :password, autocomplete: "new-password", class: "form-control form-control-lg bg-light border-0 fs-6", placeholder: "6 car. min." %>
            </div>
            <div class="col-md-6">
              <%= f.label :password_confirmation, "Confirmation", class: "form-label small fw-bold text-uppercase text-muted" %>
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control form-control-lg bg-light border-0 fs-6", placeholder: "••••••••" %>
            </div>
          </div>

          <div class="d-grid">
            <%= f.submit "Créer mon compte", class: "btn btn-dark btn-lg rounded-pill fw-bold py-3 transition" %>
          </div>

        <% end %>

        <div class="text-center mt-5 pt-3 border-top">
          <p class="text-muted small mb-0">Déjà inscrit ?</p>
          <%= link_to "Se connecter à mon espace", new_session_path(resource_name), class: "text-dark fw-bold text-decoration-none" %>
        </div>

      </div>

    </div>
  </div>
</div>