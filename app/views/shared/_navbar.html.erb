<nav class="navbar navbar-expand-lg navbar-dark bg-dark sticky-top py-3">
  <div class="container px-5">
    
    <%# LOGO %>
    <%= link_to root_path, class: "navbar-brand fw-bold fs-3 d-flex align-items-center" do %>
      <span class="text-white">EVENT</span><span class="text-primary">BRITE</span>
    <% end %>

    <%# BOUTON MOBILE %>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMain">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarMain">
      
      <%# BARRE DE RECHERCHE (Visible uniquement sur ordinateur) %>
      <div class="mx-auto w-50 d-none d-lg-block">
        <div class="input-group">
          <span class="input-group-text bg-secondary border-0 rounded-start-pill ps-3">
            <i class="bi bi-search text-light"></i>
          </span>
          <input type="text" class="form-control bg-secondary text-white border-0 rounded-end-pill py-2 shadow-none search-input" placeholder="Trouver un événement...">
        </div>
      </div>

      <ul class="navbar-nav ms-auto align-items-center">
        <li class="nav-item">
          <%= link_to "Parcourir", root_path, class: "nav-link px-3" %>
        </li>

        <% if user_signed_in? %>
          
          <%# --- AJOUT : LIEN ADMINISTRATION (Visible uniquement pour l'admin) --- %>
          <% if current_user.is_admin %>
            <li class="nav-item">
              <%= link_to admin_root_path, class: "nav-link px-3 text-danger fw-bold" do %>
                <i class="bi bi-shield-lock-fill me-1"></i> Admin
              <% end %>
            </li>
          <% end %>

          <%# BOUTON CRÉER %>
          <li class="nav-item">
            <%= link_to new_event_path, class: "nav-link px-3 text-primary fw-bold" do %>
              <i class="bi bi-plus-lg me-1"></i> Créer
            <% end %>
          </li>

          <%# MENU DÉROULANT PROFIL %>
          <li class="nav-item dropdown ms-lg-2">
            <a class="nav-link dropdown-toggle d-flex align-items-center p-0" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
              <div class="avatar-nav-wrapper">
                <%= user_avatar(current_user, size: 35) %>
              </div>
            </a>
            <ul class="dropdown-menu dropdown-menu-end border-0 shadow-lg rounded-4 p-2 mt-3" aria-labelledby="navbarDropdown">
              <li class="px-3 py-2 border-bottom mb-2">
                <small class="text-muted d-block">Connecté en tant que</small>
                <span class="fw-bold text-dark small"><%= current_user.email %></span>
              </li>
              <li>
                <%= link_to user_path(current_user), class: "dropdown-item rounded-3 py-2" do %>
                  <i class="bi bi-person me-2"></i> Mon Profil
                <% end %>
              </li>
              <li>
                <%= link_to edit_user_registration_path, class: "dropdown-item rounded-3 py-2" do %>
                  <i class="bi bi-gear me-2"></i> Paramètres
                <% end %>
              </li>
              <li><hr class="dropdown-divider"></li>
              <li>
                <%= button_to destroy_user_session_path, method: :delete, class: "dropdown-item rounded-3 py-2 text-danger bg-transparent border-0 w-100 text-start" do %>
                  <i class="bi bi-box-arrow-right me-2"></i> Déconnexion
                <% end %>
              </li>
            </ul>
          </li>
        <% else %>
          <%# LIENS VISITEURS %>
          <li class="nav-item">
            <%= link_to "Se connecter", new_user_session_path, class: "nav-link px-3" %>
          </li>
          <li class="nav-item ms-lg-2">
            <%= link_to "S'inscrire", new_user_registration_path, class: "btn btn-outline-light rounded-pill px-4 btn-sm fw-bold" %>
          </li>
        <% end %>

      </ul>
    </div>
  </div>
</nav>