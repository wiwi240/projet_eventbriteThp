<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-lg-10">
      <div class="card shadow-lg border-0 rounded-4 overflow-hidden">
        <div class="row g-0">
          
          <%# --- COLONNE GAUCHE : INFOS ORGANISATEUR --- %>
          <div class="col-md-4 bg-light d-flex flex-column align-items-center justify-content-center p-5 text-center border-end-md">
            <div class="avatar bg-primary bg-opacity-10 text-primary rounded-circle d-inline-flex align-items-center justify-content-center mb-3 shadow-sm" style="width: 100px; height: 100px; font-size: 2.5rem; font-weight: 800;">
              <% if current_user.respond_to?(:first_name) && current_user.first_name.present? %>
                <%= current_user.first_name[0].upcase %>
              <% else %>
                <%= current_user.email[0].upcase %>
              <% end %>
            </div>
            <h4 class="fw-bold mb-1 text-dark text-break">
              <% if current_user.respond_to?(:first_name) && current_user.first_name.present? %>
                <%= current_user.first_name %> <%= current_user.last_name %>
              <% else %>
                Organisateur
              <% end %>
            </h4>
            <p class="text-muted small text-break"><i class="bi bi-envelope me-1"></i><%= current_user.email %></p>
            <hr class="w-25 my-4 border-primary border-2 opacity-50">
            <p class="small text-muted fst-italic px-3">
              "Vous êtes sur le point de créer un nouvel événement incroyable !"
            </p>
          </div>

          <%# --- COLONNE DROITE : FORMULAIRE --- %>
          <div class="col-md-8 bg-white p-5">
            <h2 class="fw-bold text-primary mb-4">Créer un événement</h2>
            
            <%= form_with model: @event, local: true, class: "d-grid gap-3" do |f| %>

              <%# --- AFFICHAGE DES ERREURS --- %>
              <% if @event.errors.any? %>
                <div class="alert alert-danger rounded-3">
                  <ul class="mb-0 small">
                    <% @event.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                    <% end %>
                  </ul>
                </div>
              <% end %>

              <%# --- TITRE --- %>
              <div class="form-floating">
                <%= f.text_field :title, class: "form-control", placeholder: "Titre" %>
                <%= f.label :title, "Titre de l'événement" %>
              </div>

              <%# --- CATÉGORIE --- %>
              <div class="form-floating">
                <%= f.select :category, ["Concert", "Sport", "Théâtre", "Conférence", "Autre"], { prompt: "Choisir une catégorie..." }, { class: "form-select" } %>
                <%= f.label :category, "Catégorie" %>
              </div>

              <%# --- DESCRIPTION --- %>
              <div class="form-floating">
                <%= f.text_area :description, style: "height: 120px", class: "form-control", placeholder: "Description" %>
                <%= f.label :description, "Description détaillée" %>
              </div>

              <%# --- DATE ET DURÉE (MIS À JOUR : datetime_local_field) --- %>
              <div class="row g-2">
                <div class="col-md-6">
                  <div class="form-floating">
                    <%# Permet la sélection de la date ET de l'heure précise %>
                    <%= f.datetime_local_field :start_date, class: "form-control", placeholder: "Date et heure", min: Time.now.strftime('%Y-%m-%dT%H:%M') %>
                    <%= f.label :start_date, "Date et heure de début" %>
                  </div>
                </div>
                <div class="col-md-6">
                  <div class="form-floating">
                    <%= f.number_field :duration, step: 5, min: 5, class: "form-control", placeholder: "Durée" %>
                    <%= f.label :duration, "Durée (minutes)" %>
                  </div>
                </div>
              </div>

              <%# --- PRIX ET LIEU --- %>
              <div class="row g-2">
                <div class="col-md-6">
                  <div class="form-floating">
                    <%= f.number_field :price, min: 1, max: 1000, class: "form-control", placeholder: "Prix" %>
                    <%= f.label :price, "Prix (€)" %>
                  </div>
                </div>
                <div class="col-md-6">
                  <div class="form-floating">
                    <%= f.text_field :location, class: "form-control", placeholder: "Lieu" %>
                    <%= f.label :location, "Lieu" %>
                  </div>
                </div>
              </div>

              <%# --- CHAMP PHOTO (Active Storage) --- %>
              <div class="mb-3">
                <%= f.label :event_picture, "Photo de l'événement (obligatoire)", class: "form-label fw-bold text-primary small" %>
                <%= f.file_field :event_picture, class: "form-control rounded-3 shadow-sm" %>
                <div class="form-text small">Importez une image au format JPG, PNG ou GIF.</div>
              </div>

              <%# --- ACTIONS --- %>
              <div class="d-grid gap-2 mt-4">
                <%= f.submit "Publier l'événement", class: "btn btn-primary btn-lg rounded-pill fw-bold shadow-sm" %>
                <%= link_to "Annuler", root_path, class: "btn btn-light rounded-pill text-muted" %>
              </div>

            <% end %>
          </div>

        </div>
      </div>
    </div>
  </div>
</div>